<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/home_dest">

    <fragment
        android:id="@+id/home_dest"
        android:name="com.cranked.androidfileconverter.ui.home.HomeFragment"
        android:label="@string/home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home_dest_to_transition_fragment"
            app:destination="@id/transition_fragment" />
    </fragment>
    <fragment
        android:id="@+id/tools_dest"
        android:name="com.cranked.androidfileconverter.ui.tools.ToolsFragment"
        android:label="@string/tools"
        tools:layout="@layout/fragment_tools" />
    <fragment
        android:id="@+id/camera_dest"
        android:name="com.cranked.androidfileconverter.ui.camera.CameraFragment"
        android:label="@string/camera"
        tools:layout="@layout/fragment_camera" >
        <action
            android:id="@+id/action_camera_dest_to_cameraImageFragment"
            app:destination="@id/cameraImageFragment" />
    </fragment>
    <fragment
        android:id="@+id/settings_dest"
        android:name="com.cranked.androidfileconverter.ui.settings.SettingsFragment"
        android:label="@string/settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/transition_fragment"
        android:name="com.cranked.androidfileconverter.ui.transition.TransitionFragment"
        android:label="@string/transition"
        tools:layout="@layout/fragment_transition" >
        <action
            android:id="@+id/action_transition_fragment_self"
            app:destination="@id/transition_fragment" />
    </fragment>
    <fragment
        android:id="@+id/cameraImageFragment"
        android:name="com.cranked.androidfileconverter.ui.camera.CameraImageFragment"
        android:label="CameraImageFragment" >
        <action
            android:id="@+id/action_cameraImageFragment_to_camera_dest"
            app:destination="@id/camera_dest" />
    </fragment>

</navigation>
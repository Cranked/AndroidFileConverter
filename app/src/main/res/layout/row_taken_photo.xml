<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/takePhotoLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/side_margin"
        android:layout_marginBottom="@dimen/side_margin"
        android:background="@drawable/custom_adapter_unselected_background"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/takenPhotoImageView"
            android:layout_width="@dimen/take_photo_image_size"
            android:layout_height="@dimen/take_photo_image_size"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/icon_margin_8dp"
            android:layout_marginTop="@dimen/icon_margin_8dp"
            android:layout_marginRight="@dimen/icon_margin_8dp"
            android:layout_marginBottom="@dimen/icon_margin_8dp"
            app:srcCompat="@drawable/icon_broken_image" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/takenPhotoFileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_2dp"
                android:text="FileName"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/elementsCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_2dp"
                android:text="ElementCounts" />

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_2dp"
                android:text="DateTextView" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_margin="@dimen/icon_margin_8dp"
            android:clickable="true"
            android:src="@drawable/icon_vertical_dots" />
    </LinearLayout>
</layout>
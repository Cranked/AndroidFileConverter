<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="5dp">

    <LinearLayout
        android:id="@+id/toolListLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10dp"
        android:background="@drawable/tool_grid_item_border_radius"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tool_list_imageView"
            android:layout_width="@dimen/tool_item_image_size"
            android:layout_height="@dimen/tool_item_image_size"
            android:layout_margin="@dimen/side_margin"
            app:srcCompat="@drawable/icon_broken_image" />

        <TextView
            android:id="@+id/tool_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_5dp"
            android:text="tool_item_name" />
    </LinearLayout>
</layout>
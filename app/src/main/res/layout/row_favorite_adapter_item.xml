<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.cranked.androidfileconverter.adapter.FavoritesAdapterViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/favoriteLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contextClickable="true"
        android:orientation="vertical"
        android:padding="@dimen/side_margin">

        <ImageView
            android:id="@+id/fav_image"
            android:layout_width="@dimen/favorite_item_width"
            android:layout_height="@dimen/favorite_item_height"
            android:backgroundTint="#BA1818"
            app:srcCompat="@drawable/custom_radius_folder" />

        <TextView
            android:id="@+id/fav_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/icon_margin_8dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxWidth="200dp"
            android:maxLines="1"
            android:singleLine="true"
            android:text="TextViewawdawdawdawdawdawdawd"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>
</layout>
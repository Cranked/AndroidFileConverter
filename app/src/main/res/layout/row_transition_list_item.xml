<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.cranked.androidfileconverter.ui.transition.TransitionFragmentViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/transitionLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true">

        <ImageView
            android:id="@+id/transitionListImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="@dimen/icon_margin_8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/transitionFileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxWidth="150dp"
                    android:maxLines="1"
                    android:padding="@dimen/icon_margin_8dp"
                    android:text="hebele hubele" />

                <ImageView
                    android:id="@+id/favoriteImageView"
                    android:layout_width="@dimen/fav_icon_size"
                    android:layout_height="@dimen/fav_icon_size"
                    android:background="@drawable/custom_radius_favorite"
                    android:src="@drawable/icon_favorite"
                    android:visibility="visible" />
            </LinearLayout>

            <TextView
                android:id="@+id/lastModifiedTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/icon_margin_8dp"
                android:text="25/15/2023:84266" />
        </LinearLayout>

        <ImageView
            android:id="@+id/optionsImageView"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:src="@drawable/icon_vertical_dots" />
    </LinearLayout>
</layout>
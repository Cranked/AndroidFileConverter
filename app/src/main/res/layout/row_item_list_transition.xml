<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.cranked.androidfileconverter.ui.transition.TransitionFragmentViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/transitionConstraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true">

        <ImageView
            android:id="@+id/transitionListImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="@dimen/side_margin"
            android:layout_marginBottom="@dimen/side_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/custom_radius_folder" />

        <TextView
            android:id="@+id/lastModifiedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/icon_margin_8dp"
            android:layout_marginBottom="@dimen/icon_margin_8dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/transitionListImageView"
            app:layout_constraintStart_toEndOf="@+id/transitionListImageView"
            app:layout_constraintTop_toBottomOf="@+id/transitionFileName" />

        <ImageView
            android:id="@+id/favoriteImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/icon_margin_8dp"
            app:layout_constraintBottom_toBottomOf="@+id/transitionFileName"
            app:layout_constraintStart_toEndOf="@+id/transitionFileName"
            app:srcCompat="@drawable/custom_radius_favorite" />

        <TextView
            android:id="@+id/transitionFileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/icon_margin_8dp"
            android:layout_marginTop="@dimen/icon_margin_8dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/transitionListImageView"
            app:layout_constraintTop_toTopOf="@+id/transitionListImageView" />

        <ImageView
            android:id="@+id/optionsImageView"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="@dimen/side_margin"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="@+id/transitionListImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_vertical_dots" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>